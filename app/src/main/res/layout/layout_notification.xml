<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:elevation="@dimen/dimen_4"
        app:cardCornerRadius="@dimen/dimen_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <RelativeLayout
                android:id="@+id/relative_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"

                >

                <LinearLayout
                    android:id="@+id/linear_notify_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/text_notify_title_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimen_20"

                        android:text="@string/notify_title"
                        android:textColor="@color/color_primary_1"
                        android:textSize="@dimen/dimen_18"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dimen_20" />

                    <ImageButton
                        android:id="@+id/imgbtn_notify_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="@dimen/dimen_5"
                        android:src="@drawable/ic_delete_forever"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
                <TextView
                    android:id="@+id/text_notify_msg_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_notify_title"

                    android:text="@string/notify_msg"
                    android:textColor="@color/color_primary_1"
                    android:textSize="@dimen/dimen_12"
                    android:paddingLeft="@dimen/dimen_20"

                    android:layout_alignParentLeft="true"

                    android:paddingStart="@dimen/dimen_20"
                    android:layout_alignParentStart="true"
                    tools:ignore="RtlSymmetry" />



            </RelativeLayout>
            <ImageView
                android:id="@+id/img_notify"
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_15"
                android:visibility="gone"
                android:layout_margin="@dimen/dimen_5"
                android:src="@drawable/ic_circle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>