<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rv_gradient"
    tools:context=".fragment.MyProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_sup_pro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/bg_radius_white"
                android:layout_margin="@dimen/dimen_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/linear_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/favourite_bg"
                    android:paddingHorizontal="@dimen/dimen_5"
                    android:paddingVertical="@dimen/dimen_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <ImageButton
                        android:id="@+id/img_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/dimen_10"
                        android:src="@drawable/ic_edit"
                        android:background="@android:color/transparent"
                        tools:ignore="ContentDescription" />
                    <ImageButton
                        android:id="@+id/img_editbtn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:paddingHorizontal="@dimen/dimen_10"
                        android:src="@drawable/ic_cancel_primary"
                        android:background="@android:color/transparent"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_diag_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:paddingVertical="@dimen/dimen_40"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:id="@+id/linear_diag_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_5"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/user_name"
                                android:textSize="@dimen/dimen_20"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold"
                                android:padding="@dimen/dimen_5"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:id="@+id/text_change_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:text="@string/change_pass"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/dimen_10"
                                android:paddingVertical="@dimen/dimen_3"
                                android:paddingHorizontal="@dimen/dimen_14"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:background="@drawable/btn_radius_white"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:id="@+id/text_diag_user_name_pro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_14"
                            android:paddingHorizontal="@dimen/dimen_20"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_address_eng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_5"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_user_name"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/address_eng"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_5"
                            />
                        <TextView
                            android:id="@+id/text_diag_address_eng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_14"
                            android:paddingHorizontal="@dimen/dimen_20"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_address_ban"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_5"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_address_eng"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/address_ban"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_5"
                            />
                        <TextView
                            android:id="@+id/text_diag_address_ban"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_14"
                            android:paddingHorizontal="@dimen/dimen_20"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_address_ban"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_contact_no"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_5"
                            />
                        <TextView
                            android:id="@+id/text_diag_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_14"
                            android:paddingHorizontal="@dimen/dimen_20"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_contact"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_5"
                            />
                        <TextView
                            android:id="@+id/text_diag_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_14"
                            android:paddingHorizontal="@dimen/dimen_20"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_email"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/website"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_5"
                            />
                        <TextView
                            android:id="@+id/text_diag_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/dimen_16"
                            android:textStyle="bold"
                            android:paddingHorizontal="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_20"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:paddingVertical="@dimen/dimen_5"
                            android:textColor="?attr/colorPrimary"
                            android:background="@drawable/border_input"
                            android:layout_marginStart="@dimen/dimen_20"
                            android:layout_marginEnd="@dimen/dimen_5" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_serial_num_eng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_website"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_diag_serial_num_eng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/serial_eng"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_5"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_diag_serial_num_eng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:paddingHorizontal="@dimen/dimen_20"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_serial_num_ban"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/linear_serial_num_eng"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_diag_serial_num_ban"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/serial_ban"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_diag_serial_num_ban"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:paddingHorizontal="@dimen/dimen_20"
                            />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_diag_profile_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:paddingVertical="@dimen/dimen_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:id="@+id/linear_diag_add_eng_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_5"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/address_eng"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_add_eng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_18"
                            android:clickable="false"
                            android:focusable="false"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill,LabelFor,TextFields" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_address_ban_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_5"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_add_eng_edit"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/address_ban"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_add_ban"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_18"
                            android:clickable="false"
                            android:focusable="false"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill,LabelFor,TextFields" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_contact_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_address_ban_edit"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_contact_no"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            android:inputType="number"
                            tools:ignore="Autofill,LabelFor" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_contact_edit"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill,LabelFor,TextFields" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_website_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_email_edit"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/website"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_website"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill,TextFields" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_website_edit"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/user_name"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_username"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill,TextFields" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_serial_eng_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_username_edit"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/serial"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_serial_eng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_ser_num_eng"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill,TextFields" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_diag_serial_ban_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_serial_eng_edit"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/serial_ban"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            android:padding="@dimen/dimen_10"
                            />
                        <EditText
                            android:id="@+id/edit_diag_serial_ban"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_ser_num_ban"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill,TextFields" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_btn_saved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saved"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="@dimen/dimen_20"
                        android:paddingHorizontal="@dimen/dimen_30"
                        android:paddingVertical="@dimen/dimen_5"
                        android:layout_marginVertical="@dimen/dimen_10"
                        android:background="@drawable/btn_radius"
                        app:layout_constraintTop_toBottomOf="@+id/linear_diag_serial_ban_edit"
                        app:layout_constraintEnd_toEndOf="parent"

                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_diag_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/dimen_10"
                    android:paddingVertical="@dimen/dimen_30"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:id="@+id/linear_change_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_5"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/current_pass"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"

                            />
                        <EditText
                            android:id="@+id/edit_old_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_change_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dimen_5"
                        app:layout_constraintTop_toBottomOf="@+id/linear_change_old_password"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/new_pass"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"

                            />
                        <EditText
                            android:id="@+id/edit_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_change_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_5"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/linear_change_new_password"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/confirm_pass"
                            android:textSize="@dimen/dimen_20"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/edit_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="@dimen/dimen_18"
                            android:paddingHorizontal="@dimen/dimen_10"
                            tools:ignore="Autofill" />


                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/linear_change_confirm_password"
                        >

                        <TextView
                            android:id="@+id/text_forget_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/forget_pass_q"
                            android:textColor="?attr/colorOnPrimarySurface"
                            android:textSize="@dimen/dimen_14"
                            android:textStyle="bold"
                            android:paddingVertical="@dimen/dimen_5"
                            android:paddingHorizontal="@dimen/dimen_10"
                            android:layout_marginVertical="@dimen/dimen_10"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"

                            />
                        <TextView
                            android:id="@+id/text_btn_change_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/change"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="@dimen/dimen_20"
                            android:paddingHorizontal="@dimen/dimen_30"
                            android:paddingVertical="@dimen/dimen_5"
                            android:layout_marginVertical="@dimen/dimen_10"
                            android:background="@drawable/btn_radius"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_email_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/solid_stoke"
                    android:paddingVertical="@dimen/dimen_20"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <TextView
                        android:id="@+id/text_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dimen_30"
                        android:gravity="start"
                        android:paddingHorizontal="@dimen/dimen_10"
                        android:text="@string/for_sent_pass_email"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="@dimen/dimen_16"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_user_name_verify"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:hint="@string/enter_username"
                        app:layout_constraintTop_toBottomOf="@+id/text_pass"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:layout_marginEnd="@dimen/dimen_10">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_user_name_verify"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_50"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_user_name_verify"
                        tools:layout_editor_absoluteX="5dp">


                        <TextView
                            android:id = "@+id/text_email_sent_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dimen_10"
                            android:background="@drawable/btn_radius"
                            android:gravity="center"

                            android:paddingVertical="@dimen/dimen_10"
                            android:text="@string/sent"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="@dimen/dimen_20" />

                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>